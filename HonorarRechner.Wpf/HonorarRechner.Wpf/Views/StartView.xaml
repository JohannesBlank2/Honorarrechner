<UserControl x:Class="HonorarRechner.Wpf.Views.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="750"
             d:DesignWidth="1300">

    <UserControl.Resources>

        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="25"
                          ShadowDepth="4"
                          Opacity="0.35"
                          Direction="270" />

        <Style x:Key="MandatTypeButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="260"/>
            <Setter Property="Height" Value="140"/>
            <Setter Property="Margin" Value="25"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0077BE"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root"
                                CornerRadius="30"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{TemplateBinding Content}"
                                           HorizontalAlignment="Center"
                                           FontSize="{TemplateBinding FontSize}"
                                           FontWeight="{TemplateBinding FontWeight}"
                                           Foreground="{TemplateBinding Foreground}"/>
                                <TextBlock Text="{TemplateBinding Tag}"
                                           HorizontalAlignment="Center"
                                           Margin="0,6,0,0"
                                           FontSize="13"
                                           Foreground="#CCFFFFFF"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#198fd5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#11689a"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="root" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallAccentButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#004B7F"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root"
                                CornerRadius="20"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#FFFFFF"/>
                                <Setter TargetName="root" Property="BorderBrush" Value="#C5E4F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#E0F0FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Border Background="#0077BE"
                CornerRadius="40"
                Margin="30"
                Padding="50"
                Effect="{StaticResource CardShadow}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Kopf -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Width="130"
                            Height="130"
                            CornerRadius="20"
                            Background="#F5F5F5"
                            HorizontalAlignment="Left"
                            Margin="0,0,30,0">
                        <Image Source="/SFS Logo.png" Stretch="Uniform"/>
                    </Border>

                    <TextBlock Grid.Column="1"
                               Text="Mandatstyp"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="White"
                               TextDecorations="Underline"/>
                </Grid>

                <!-- Auswahl -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,40,0,20">
                        <Button Style="{StaticResource MandatTypeButtonStyle}"
                                Content="Privat"
                                Tag="Privatmandat"
                                Command="{Binding SelectMandatCommand}"
                                CommandParameter="Privat"/>

                        <Button Style="{StaticResource MandatTypeButtonStyle}"
                                Content="Unternehmen"
                                Tag="Unternehmensmandat"
                                Command="{Binding SelectMandatCommand}"
                                CommandParameter="Unternehmen"/>

                        <Button Style="{StaticResource MandatTypeButtonStyle}"
                                Content="StartUp"
                                Tag="coming soon..."
                                IsEnabled="False"
                                CommandParameter="StartUp"/>
                    </StackPanel>
                </StackPanel>

                <!-- Footer -->
                <Grid Grid.Row="2" Margin="0,40,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical"
                                Grid.Column="0"
                                Margin="5,0,0,0">
                        <Button Style="{StaticResource SmallAccentButtonStyle}"
                                Content="Open Excel"
                                Command="{Binding OpenExcelCommand}"/>
                        <Button Style="{StaticResource SmallAccentButtonStyle}"
                                Content="Update Excel"
                                Command="{Binding UpdateExcelCommand}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding JahresHonorarText}"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding MonatsHonorarText}"
                                   FontSize="14"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
