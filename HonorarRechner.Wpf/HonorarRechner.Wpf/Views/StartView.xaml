<UserControl x:Class="HonorarRechner.Wpf.Views.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="500" d:DesignWidth="1000">

    <UserControl.Resources>
        <Style x:Key="MandatTypeButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="260"/>
            <Setter Property="Height" Value="140"/>
            <Setter Property="Margin" Value="25"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0077BE"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" CornerRadius="30" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{TemplateBinding Content}" HorizontalAlignment="Center" FontSize="{TemplateBinding FontSize}" FontWeight="{TemplateBinding FontWeight}" Foreground="{TemplateBinding Foreground}"/>
                                <TextBlock Text="{TemplateBinding Tag}" HorizontalAlignment="Center" Margin="0,6,0,0" FontSize="13" Foreground="#CCFFFFFF"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#198fd5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#11689a"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="root" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,20">
                <Button Style="{StaticResource MandatTypeButtonStyle}" Content="Privat" Tag="Privatmandat" Command="{Binding SelectMandatCommand}" CommandParameter="Privat"/>
                <Button Style="{StaticResource MandatTypeButtonStyle}" Content="Unternehmen" Tag="Unternehmensmandat" Command="{Binding SelectMandatCommand}" CommandParameter="Unternehmen"/>
                <Button Style="{StaticResource MandatTypeButtonStyle}" Content="StartUp" Tag="coming soon..." IsEnabled="False" CommandParameter="StartUp"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>