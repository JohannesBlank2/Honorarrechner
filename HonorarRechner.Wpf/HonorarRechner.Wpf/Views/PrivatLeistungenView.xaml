<UserControl x:Class="HonorarRechner.Wpf.Views.PrivatLeistungenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="500">

    <UserControl.Resources>
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="#F7FBFF"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2E5A78"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="InputSurface" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#D6E6F2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>

        <Style x:Key="FlatComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Foreground" Value="#003B5C"/>
        </Style>

        <Style x:Key="AddButton" TargetType="Button">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0077BE"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1689D3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0F6FAE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RemoveButton" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#D9534F"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="14">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C9302C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#A52824"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LeistungItemContainer" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="0,10" MaxWidth="1500" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Private Leistungen verwalten" Style="{StaticResource SectionTitle}"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="2.4*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource Card}" Margin="-222,0,54,0"
                    VerticalAlignment="Top" Padding="20,16,20,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Leistung auswahlen" Style="{StaticResource LabelText}"/>

                    <Border Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,12" Style="{StaticResource InputSurface}">
                        <ComboBox Height="30"
                                  ItemsSource="{Binding LeistungOptionen}"
                                  DisplayMemberPath="Name"
                                  SelectedItem="{Binding SelectedLeistungOption}"
                                  Style="{StaticResource FlatComboBox}"/>
                    </Border>

                    <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Preis" Style="{StaticResource LabelText}" Margin="0,0,10,0"/>
                        <TextBlock FontSize="18" FontWeight="SemiBold" Foreground="#003B5C"
                                   Text="{Binding SelectedLeistungPreisText}"/>
                    </StackPanel>

                    <Button Grid.Row="2" Grid.Column="1" Content="+" Style="{StaticResource AddButton}"
                            Command="{Binding AddLeistungCommand}" />
                </Grid>
            </Border>

            <Border Style="{StaticResource Card}" Grid.ColumnSpan="2" Margin="60,0,-267,18">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="28"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Leistung" FontSize="13" Foreground="#2E5A78"/>
                        <TextBlock Grid.Column="1" Text="Preis" FontSize="13" Foreground="#2E5A78" Margin="20,0,0,0"/>
                    </Grid>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled" CanContentScroll="True">
                        <ListView ItemsSource="{Binding Leistungen}" BorderThickness="0"
                                  Background="Transparent" MinHeight="320"
                                  ItemContainerStyle="{StaticResource LeistungItemContainer}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" CornerRadius="12" Padding="12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Name}" FontSize="16" Foreground="#003B5C" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Preis, StringFormat={}{0:C}}" FontSize="16"
                                                   FontWeight="SemiBold" Foreground="#003B5C" VerticalAlignment="Center"
                                                   Margin="20,0"/>
                                            <Button Grid.Column="2" Content="X" Style="{StaticResource RemoveButton}"
                                                HorizontalAlignment="Right"
                                                Command="{Binding DataContext.RemoveLeistungCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="2" Style="{StaticResource Card}" Margin="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Gesamtsumme" FontSize="16" Foreground="#2E5A78" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="{Binding GesamtPreisText}" FontSize="22" FontWeight="Bold"
                           Foreground="#003B5C" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
