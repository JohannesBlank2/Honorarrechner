<UserControl x:Class="HonorarRechner.Wpf.Views.PrivatLeistungenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="500" Width="1100
             ">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="#F7FBFF"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2E5A78"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="PrimaryActionButton" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0077BE"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1689D3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0F6FAE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RemoveButton" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#D9534F"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="14">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C9302C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#A52824"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LeistungItemContainer" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="0,10" MaxWidth="1500" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Private Leistungen verwalten" Style="{StaticResource SectionTitle}"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="2.4*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource Card}" Margin="-414,0,108,0"
                    VerticalAlignment="Top" Padding="20,16,20,12" Height="286">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Leistung hinzufuegen" Style="{StaticResource LabelText}"/>

                    <Button Grid.Row="1" Margin="0,0,0,12" Style="{StaticResource PrimaryActionButton}"
                            Content="Leistung hinzufuegen"
                            Click="OpenLeistungAuswahl_Click"/>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Preis" Style="{StaticResource LabelText}" Margin="0,0,10,0"/>
                        <TextBlock FontSize="18" FontWeight="SemiBold" Foreground="#003B5C"
                                   Text="{Binding SelectedLeistungPreisText}"/>
                    </StackPanel>

                    <Border Grid.Row="3" Margin="0,16,0,0"
                            Background="White" CornerRadius="12"
                            BorderBrush="#D6E6F2" BorderThickness="1" Padding="14">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Gesamtsumme" FontSize="14" Foreground="#2E5A78" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="{Binding GesamtPreisText}" FontSize="18" FontWeight="Bold"
                                       Foreground="#003B5C" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Button Grid.Row="4" Margin="0,14,0,0"
                            Style="{StaticResource PrimaryActionButton}"
                            Content="Werte eingeben"
                            Command="{Binding WerteEingebenCommand}"
                            Visibility="{Binding HasEingabeLeistungen, Converter={StaticResource BoolToVisibility}}"/>
                </Grid>
            </Border>

            <Border Style="{StaticResource Card}" Margin="0,0,-421,18" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="28"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Leistung" FontSize="13" Foreground="#2E5A78"/>
                        <TextBlock Grid.Column="1" Text="Preis" FontSize="13" Foreground="#2E5A78" Margin="20,0,0,0"/>
                    </Grid>

                    <ScrollViewer x:Name="LeistungenScrollViewer" Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  CanContentScroll="False">
                        <ListView ItemsSource="{Binding Leistungen}" BorderThickness="0"
                              Background="Transparent" MinHeight="320"
                              ItemContainerStyle="{StaticResource LeistungItemContainer}"
                              ScrollViewer.VerticalScrollBarVisibility="Disabled"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              PreviewMouseWheel="LeistungenList_PreviewMouseWheel">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" CornerRadius="12" Padding="12"
                                            BorderBrush="#D6E6F2" BorderThickness="1"
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Name}" FontSize="16" Foreground="#003B5C" VerticalAlignment="Center"
                                                       TextWrapping="Wrap" MaxWidth="420"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Preis, StringFormat={}{0:0.00} €}" FontSize="16"
                                                   FontWeight="SemiBold" Foreground="#003B5C" VerticalAlignment="Center"
                                                   Margin="20,0"/>
                                            <Button Grid.Column="2" Content="X" Style="{StaticResource RemoveButton}"
                                                HorizontalAlignment="Right"
                                                Command="{Binding DataContext.RemoveLeistungCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                    </ListView>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</UserControl>
