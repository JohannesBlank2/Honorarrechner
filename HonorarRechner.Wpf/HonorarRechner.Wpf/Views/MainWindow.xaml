<Window x:Class="HonorarRechner.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:HonorarRechner.Wpf.Views"
        mc:Ignorable="d"
        Title="Honorarrechner"
        Height="900" Width="1440"
        MinHeight="700" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#7FB0D6">

    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="25" ShadowDepth="4" Opacity="0.35" Direction="270" />

        <Style x:Key="SmallAccentButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#004B7F"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#E0F0FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="#20FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="22" BorderBrush="White" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1300" Height="750">
            <Border Background="#0077BE" CornerRadius="40" Margin="20" Padding="30" Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="100" Height="100" CornerRadius="20" Background="White" HorizontalAlignment="Left">
                            <Image Source="/SFS Logo.png" Stretch="Uniform"/>
                        </Border>

                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Content.DataContext.ViewTitle, ElementName=MainContent, FallbackValue='Honorarrechner'}" 
                                   FontSize="36" FontWeight="Bold" Foreground="White" 
                                   TextDecorations="Underline" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Grid>

                    <ContentControl x:Name="MainContent" Grid.Row="1" />

                    <Grid Grid.Row="2" Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                            <Button Style="{StaticResource SmallAccentButtonStyle}" Content="Open Excel" 
                                    Command="{Binding Content.DataContext.OpenExcelCommand, ElementName=MainContent}"/>
                            <Button Style="{StaticResource SmallAccentButtonStyle}" Content="Update Excel" 
                                    Command="{Binding Content.DataContext.UpdateExcelCommand, ElementName=MainContent}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                            <TextBlock Text="{Binding Content.DataContext.JahresHonorarText, ElementName=MainContent, FallbackValue='Jahres Honorar: 0,00 €'}" 
                                       FontSize="22" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding Content.DataContext.MonatsHonorarText, ElementName=MainContent, FallbackValue='Monats Honorar: 0,00 €'}" 
                                       FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <Button Content="Zurück" 
                                    Command="{Binding Content.DataContext.ZurueckCommand, ElementName=MainContent}" 
                                    Style="{StaticResource NavButton}" Margin="0,0,15,0"/>

                            <Button Content="Weiter" 
                                    Command="{Binding Content.DataContext.WeiterCommand, ElementName=MainContent}" 
                                    Style="{StaticResource NavButton}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</Window>