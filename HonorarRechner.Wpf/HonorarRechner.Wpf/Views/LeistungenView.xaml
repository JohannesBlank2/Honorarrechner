<UserControl x:Class="HonorarRechner.Wpf.Views.LeistungenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:HonorarRechner.Wpf.Converters"
             mc:Ignorable="d"
             d:DesignWidth="1300"
             d:DesignHeight="750">

    <UserControl.Resources>

        <!-- Apple-Style Shadow -->
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="20"
                          ShadowDepth="2"
                          Opacity="0.25"
                          Direction="270"/>

        <!-- Converter FIXED -->
        <conv:BoolToOpacityConverter x:Key="BoolToOpacity" />

        <!-- Apple-Style Toggle Button -->
        <Style x:Key="OptionToggleButton" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">

                        <Border x:Name="root"
                                Padding="12"
                                CornerRadius="18"
                                Background="#10FFFFFF"
                                BorderBrush="#33FFFFFF"
                                BorderThickness="2"
                                Effect="{StaticResource CardShadow}">
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <Ellipse Width="16" Height="16"
                                         Fill="White"
                                         Opacity="{Binding IsChecked,
                                                  RelativeSource={RelativeSource TemplatedParent},
                                                  Converter={StaticResource BoolToOpacity}}"
                                         Margin="0,0,10,0"/>

                                <TextBlock Text="{TemplateBinding Content}"
                                           FontSize="20"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#20FFFFFF"/>
                            </Trigger>

                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#50FFFFFF"/>
                                <Setter TargetName="root" Property="BorderBrush" Value="#AAFFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!-- FADE-IN -->
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>


    <!-- MAIN UI -->
    <Grid>
        <Border Background="#0077BE"
                CornerRadius="40"
                Margin="30"
                Padding="50"
                Effect="{StaticResource CardShadow}">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <!-- HEADER -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Width="130"
                            Height="130"
                            CornerRadius="20"
                            Background="#F5F5F5">
                        <Image Source="/SFS Logo.png" Stretch="Uniform"/>
                    </Border>

                    <TextBlock Grid.Column="1"
                               Text="Leistungen"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="White"
                               TextDecorations="Underline"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>


                <!-- CONTENT -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>


                    <!-- Spaltenüberschrift -->
                    <TextBlock Text="Monatlich" Grid.Row="0" Grid.Column="0"
                               Foreground="White" FontSize="18"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Jährlich" Grid.Row="0" Grid.Column="1"
                               Foreground="White" FontSize="18"
                               HorizontalAlignment="Center"/>


                    <!-- FiBu -->
                    <TextBlock Text="{Binding FiBuMonatlichFormatted}"
                               Grid.Row="1" Grid.Column="0"
                               Foreground="White" FontSize="20"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="{Binding FiBuJaehrlichFormatted}"
                               Grid.Row="1" Grid.Column="1"
                               Foreground="White" FontSize="20"
                               HorizontalAlignment="Center"/>

                    <ToggleButton Grid.Row="1" Grid.Column="2"
                                  Style="{StaticResource OptionToggleButton}"
                                  Content="FiBu"
                                  IsChecked="{Binding FiBu}"/>


                    <!-- JA -->
                    <TextBlock Text="{Binding JAMonatlichFormatted}"
                               Grid.Row="2" Grid.Column="0"
                               Foreground="White" FontSize="20"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="{Binding JAJaehrlichFormatted}"
                               Grid.Row="2" Grid.Column="1"
                               Foreground="White" FontSize="20"
                               HorizontalAlignment="Center"/>

                    <ToggleButton Grid.Row="2" Grid.Column="2"
                                  Style="{StaticResource OptionToggleButton}"
                                  Content="JA"
                                  IsChecked="{Binding JA}"/>


                    <!-- Lohn -->
                    <TextBlock Text="{Binding LohnMonatlichFormatted}"
                               Grid.Row="3" Grid.Column="0"
                               Foreground="White" FontSize="20"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="{Binding LohnJaehrlichFormatted}"
                               Grid.Row="3" Grid.Column="1"
                               Foreground="White" FontSize="20"
                               HorizontalAlignment="Center"/>

                    <ToggleButton Grid.Row="3" Grid.Column="2"
                                  Style="{StaticResource OptionToggleButton}"
                                  Content="Lohn"
                                  IsChecked="{Binding Lohn}"/>


                    <!-- Selbstbucher -->
                    <TextBlock Text="{Binding SelbstbucherMonatlichFormatted}"
                               Grid.Row="4" Grid.Column="0"
                               Foreground="White" FontSize="20"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="{Binding SelbstbucherJaehrlichFormatted}"
                               Grid.Row="4" Grid.Column="1"
                               Foreground="White" FontSize="20"
                               HorizontalAlignment="Center"/>

                    <ToggleButton Grid.Row="4" Grid.Column="2"
                                  Style="{StaticResource OptionToggleButton}"
                                  Content="Selbstbucher (+20%)"
                                  IsChecked="{Binding Selbstbucher}"/>

                </Grid>


                <!-- FOOTER -->
                <Grid Grid.Row="2"
                      Margin="0,40,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="Zurück"
                            Command="{Binding ZurueckCommand}"
                            Width="150"
                            Height="45"/>

                    <StackPanel Grid.Column="1"
                                HorizontalAlignment="Center">
                        <TextBlock Text="{Binding JahresHonorarText}"
                                   Foreground="White"
                                   FontSize="22"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding MonatsHonorarText}"
                                   Foreground="White"
                                   FontSize="14"/>
                    </StackPanel>

                    <Button Grid.Column="2"
                            Content="Weiter"
                            Command="{Binding WeiterCommand}"
                            Width="150"
                            Height="45"/>
                </Grid>

            </Grid>
        </Border>
    </Grid>

</UserControl>
