<UserControl x:Class="HonorarRechner.Wpf.Views.JaAuswahlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:HonorarRechner.Wpf.Converters"
             mc:Ignorable="d"
             d:DesignHeight="750" d:DesignWidth="1300">

    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="20" ShadowDepth="2" Opacity="0.25" Direction="270"/>
        <conv:BoolToOpacityConverter x:Key="BoolToOpacity" />
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="BigOptionRadio" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="root" Width="300" Height="200" CornerRadius="30" 
                                Background="#10FFFFFF" BorderBrush="#33FFFFFF" BorderThickness="2" 
                                Effect="{StaticResource CardShadow}" Margin="20">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="{TemplateBinding Content}" FontSize="32" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                <TextBlock Text="{TemplateBinding Tag}" FontSize="16" Foreground="#CCFFFFFF" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                <Ellipse Width="24" Height="24" Margin="0,20,0,0" Stroke="White" StrokeThickness="2">
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="#26D1DE" Opacity="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToOpacity}}"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#0069AA"/>
                                <Setter TargetName="root" Property="BorderBrush" Value="#FFFFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LinkButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#CCFFFFFF"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" TextDecorations="Underline" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Center"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#26D1DE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Border Background="#0077BE" CornerRadius="40" Margin="30" Padding="50" Effect="{StaticResource CardShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,30">
                    <TextBlock Text="Jahresabschluss (JA)" FontSize="36" FontWeight="Bold" Foreground="White" 
                               TextDecorations="Underline" HorizontalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <RadioButton GroupName="MainType" Content="EÜR" Tag="(Einnahmen Überschuss Rechner)" 
                                     IsChecked="{Binding IsEuerSelected}" Style="{StaticResource BigOptionRadio}"/>

                        <Button Content="zum EÜR" 
                                Command="{Binding OpenEuerCommand}"
                                Visibility="{Binding IsEuerSelected, Converter={StaticResource BoolToVis}}"
                                Style="{StaticResource LinkButton}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <RadioButton GroupName="MainType" Content="Bilanz" Tag="(Bilanz Rechner)" 
                                     IsChecked="{Binding IsBilanzSelected}" Style="{StaticResource BigOptionRadio}"/>

                        <Button Content="zur Bilanz" 
                                Command="{Binding OpenBilanzCommand}"
                                Visibility="{Binding IsBilanzSelected, Converter={StaticResource BoolToVis}}"
                                Style="{StaticResource LinkButton}"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0"
                                    Visibility="{Binding IsBilanzSelected, Converter={StaticResource BoolToVis}}">

                            <RadioButton GroupName="SubType" Content="Einzelunternehmen" IsChecked="{Binding IsEinzelunternehmen}"
                                         Foreground="White" FontSize="16" Margin="0,0,20,0" VerticalContentAlignment="Center"/>

                            <RadioButton GroupName="SubType" Content="Gesellschaft" IsChecked="{Binding IsGesellschaft}"
                                         Foreground="White" FontSize="16" VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Button Content="Zurück" Command="{Binding ZurueckCommand}" 
                            Width="150" Height="45" FontSize="16" HorizontalAlignment="Left"
                            Background="#20FFFFFF" Foreground="White">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="22" BorderBrush="White" BorderThickness="1">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#40FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>