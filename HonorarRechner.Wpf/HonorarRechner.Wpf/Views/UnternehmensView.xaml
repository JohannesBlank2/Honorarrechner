<UserControl x:Class="HonorarRechner.Wpf.Views.UnternehmensView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="750"
             d:DesignWidth="1300">

    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="25"
                          ShadowDepth="4"
                          Opacity="0.35"
                          Direction="270" />

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#198fd5"/>
            <Setter Property="BorderBrush" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root"
                                CornerRadius="20"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#11689a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallAccentButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#004B7F"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root"
                                CornerRadius="20"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#FFFFFF"/>
                                <Setter TargetName="root" Property="BorderBrush" Value="#C5E4F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#E0F0FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="260"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,6,0,20"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Border Background="#0077BE"
                CornerRadius="40"
                Margin="30"
                Padding="50"
                Effect="{StaticResource CardShadow}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Kopf -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Width="130"
                            Height="130"
                            CornerRadius="20"
                            Background="#F5F5F5"
                            HorizontalAlignment="Left"
                            Margin="0,0,30,0">
                        <Image Source="/SFS Logo.png" Stretch="Uniform"/>
                    </Border>

                    <TextBlock Grid.Column="1"
                               Text="Unternehmensdaten"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="30"
                               FontWeight="Bold"
                               Foreground="White"
                               TextDecorations="Underline"/>
                </Grid>

                <!-- Inhalt -->
                <Grid Grid.Row="1" Margin="40,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Umsatz -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="40,0,40,20">
                        <TextBlock Text="Umsatz im Jahr"
                   Foreground="White"
                   FontSize="20" TextAlignment="Center"/>
                        <TextBox Style="{StaticResource InputTextBoxStyle}"
                 Text="{Binding UmsatzImJahr, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Bilanzsumme -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="40,0,40,20">
                        <TextBlock Text="Bilanzsumme"
                   Foreground="White"
                   FontSize="20" TextAlignment="Center"/>
                        <TextBox Style="{StaticResource InputTextBoxStyle}"
                 Text="{Binding Bilanzsumme, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Jahresüberschuss -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="40,0,40,20">
                        <TextBlock Text="Jahresüberschuss"
                   Foreground="White"
                   FontSize="20" TextAlignment="Center"/>
                        <TextBox Style="{StaticResource InputTextBoxStyle}"
                 Text="{Binding Jahresueberschuss, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Anzahl Mitarbeiter -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="40,0,40,20">
                        <TextBlock Text="Anzahl Mitarbeiter"
                   Foreground="White"
                   FontSize="20" TextAlignment="Center"/>
                        <TextBox Style="{StaticResource InputTextBoxStyle}"
                 Text="{Binding AnzahlMitarbeiter, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Checkbox-Bereich -->
                    <StackPanel Grid.Row="2"
            Grid.ColumnSpan="2"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,30,0,0">

                        <StackPanel HorizontalAlignment="Center" Margin="0,0,80,0">
                            <CheckBox Content="Bargeldgewerbe"
                  Foreground="White"
                  FontSize="18"
                  IsChecked="{Binding IstBargeldGewerbe}"
                  HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel HorizontalAlignment="Center" Margin="80,0,0,0">
                            <CheckBox Content="Onlinehändler"
                  Foreground="White"
                  FontSize="18"
                  IsChecked="{Binding IstOnlineHaendler}"
                  HorizontalAlignment="Center"/>
                        </StackPanel>

                    </StackPanel>

                </Grid>


                <!-- Footer -->
                <Grid Grid.Row="2" Margin="0,40,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Orientation="Vertical"
                                Margin="5,0,0,0">
                        <Button Style="{StaticResource SmallAccentButtonStyle}"
                                Content="Open Excel"
                                Command="{Binding OpenExcelCommand}"/>
                        <Button Style="{StaticResource SmallAccentButtonStyle}"
                                Content="Update Excel"
                                Command="{Binding UpdateExcelCommand}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding JahresHonorarText}"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding MonatsHonorarText}"
                                   FontSize="14"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Style="{StaticResource PrimaryButtonStyle}"
                                Content="Zurück"
                                Command="{Binding ZurueckCommand}"/>
                        <Button Style="{StaticResource PrimaryButtonStyle}"
                                Content="Weiter"
                                Command="{Binding WeiterCommand}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
